{
  "version": 2,

  "rewrites": [
    {
      "source": "/",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": " Content-Type",
        "continue": true
      },
      "destination": "/api/index.js"
    },
    { "source": "/tag/<tag>", "destination": "/api/tag.js?tag=$tag" }
  ]
}
