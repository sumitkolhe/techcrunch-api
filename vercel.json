{
  "version": 2,

  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index.js"
    },
    { "source": "/tag/:tag", "destination": "/api/tag.js" }
  ],

  "headers": [
    {
      "source": "/",
      "headers": [
        {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "GET",
          "continue": true
        }
      ]
    }
  ]
}
